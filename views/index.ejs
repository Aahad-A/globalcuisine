<table border="1">
  <tr>
    <td width = "80%">

      <h1> Welcome to Global Cuisine</h1>
      <p> Here you will find the perfect dinner from our many selected restaurants! </p>


      <% if (allrecs.length > 0) {%>
            <% allrecs.forEach((recref, index) => { %>
              <product>
                  <table>
                    <tr> <td colspan="2"><%= recref.productname %></td></tr>
                    <tr> <td colspan="2"><%= recref.prodimage %></td></tr>
                    <tr> <td colspan="2"><%= recref.description %></td></tr>
                    <tr> <td><%= recref.package_id %> </td> <td><%=
                    recref.category_id %></td> </tr>
                    <tr> <td><%= recref.prodcolor %></td> <td><%= recref.saleprice
                    %></td></tr>
                    <tr> <td><%= recref.status %></td>
                    <td><a href='/product/<%= recref.product_id%>/show'>Details</a></td></tr>
                  </table>
              </product>
          
            <% }); %>
          <% } else { %>
          <p>Not Records Available</p>
          <% } %>
        </td>
        <td width = "20%">
          <% promos.forEach((recref, index) => { %>
            <figure> <img src = "images/<%= recref.promoimage %>"> </figure>
          <% }); %>
        </td>
      </tr>
    </table>

    