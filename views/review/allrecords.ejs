<% if (allrecs.length > 0) { %>
  <table border="1">
      <!-- review_id, customer_id, food_item_id, package_id, rating, comment, date -->
      <tr>
          <th>ID</th>
          <th>Customer ID</th>
          <th>Food Item ID</th>
          <th>Package ID</th>
          <th>Rating</th>
          <th>Comment</th>
          <th>Date</th>
          <th colspan="2">Actions</th>
      </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.review_id %></td>
      <td><%= recref.customer_id %></td>
      <td><%= recref.food_item_id ? recref.food_item_id : 'N/A' %></td>
      <td><%= recref.package_id ? recref.package_id : 'N/A' %></td>
      <td><%= recref.rating %></td>
      <td><%= recref.comment %></td>
      <td><%= recref.date %></td>
      <td><a href="/review/<%= recref.review_id %>/show">Details</a></td>
      <td><a href="/review/<%= recref.review_id %>/edit">Edit</a></td>
      <td><a href="/review/<%= recref.review_id %>/delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
  </table>
<% } else { %>
  <p>No Records Available</p>
<% } %>
<p><a href="/review/addrecord">Add New</a></p>
