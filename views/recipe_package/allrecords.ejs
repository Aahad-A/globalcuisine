<% if (allrecs.length > 0) { %>
  <table border="1">
      <!-- package_id, name, cuisine_type, price, ingredients, shipping_address -->
      <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Cuisine Type</th>
          <th>Price</th>
          <th>Ingredients</th>
          <th>Shipping Address</th>
          <th colspan="3">Actions</th>
      </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.package_id %></td>
      <td><%= recref.name %></td>
      <td><%= recref.cuisine_type %></td>
      <td>$<%= recref.price %></td>
      <td><%= recref.ingredients %></td>
      <td><%= recref.shipping_address %></td>
      <td><a href="/recipe_package/<%= recref.package_id %>/show">Details</a></td>
      <td><a href="/recipe_package/<%= recref.package_id %>/edit">Edit</a></td>
      <td><a href="/recipe_package/<%= recref.package_id %>/delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
  </table>
<% } else { %>
  <p>No Records Available</p>
<% } %>
<p><a href="/recipe_package/addrecord">Add New</a></p>
