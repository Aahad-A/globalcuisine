<% if (allrecs.length > 0) { %>
  <table border="1">
      <!-- firstname, lastname, email, phone, address1, address2, city, state, zip -->
      <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Address 1</th>
          <th>Address 2</th>
          <th>City</th>
          <th>State</th>
          <th>ZIP</th>
          <th colspan="3">Actions</th>
      </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.customer_id %></td>
      <td><%= recref.firstname %></td>
      <td><%= recref.lastname %></td>
      <td><%= recref.email %></td>
      <td><%= recref.phone %></td>
      <td><%= recref.address1 %></td>
      <td><%= recref.address2 %></td>
      <td><%= recref.city %></td>
      <td><%= recref.state %></td>
      <td><%= recref.zip %></td>
      <td><a href="/customer/<%= recref.customer_id %>/show">Details</a></td>
      <td><a href="/customer/<%= recref.customer_id %>/edit">Edit</a></td>
      <td><a href="/customer/<%= recref.customer_id %>/delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
  </table>
  <% } else { %>
  <p>No Records Available</p>
  <% } %>
  <p><a href="/customer/addrecord">Add New</a></p>
  