<% if (allrecs.length > 0) { %>
  <table border="1">
      <!-- restaurant_id, name, cuisine_type, location, delivery_time -->
      <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Cuisine Type</th>
          <th>Location</th>
          <th>Delivery Time</th>
          <th colspan="2">Actions</th>
      </tr>
    <% allrecs.forEach((recref, index) => { %>
    <tr>
      <td><%= recref.restaurant_id %></td>
      <td><%= recref.name %></td>
      <td><%= recref.cuisine_type %></td>
      <td><%= recref.location %></td>
      <td><%= recref.delivery_time %></td>
      <td><a href="/restaurant/<%= recref.restaurant_id %>/show">Details</a></td>
      <td><a href="/restaurant/<%= recref.restaurant_id %>/edit">Edit</a></td>
      <td><a href="/restaurant/<%= recref.restaurant_id %>/delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
    </tr>
    <% }); %>
  </table>
<% } else { %>
  <p>No Records Available</p>
<% } %>
<p><a href="/restaurant/addrecord">Add New</a></p>
