<% if (allrecs.length > 0) { %>
  <table border="1">
      <!-- ID, Name, Cuisine Type, Price, Ingredients, Availability -->
      <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Cuisine Type</th>
          <th>Price</th>
          <th>Ingredients</th>
          <th>Availability</th>
          <th colspan="3">Actions</th>
      </tr>
      <% allrecs.forEach((recref, index) => { %>
      <tr>
          <td><%= recref.food_item_id %></td>
          <td><%= recref.name %></td>
          <td><%= recref.cuisine_type %></td>
          <td>$<%= recref.price %></td>
          <td><%= recref.ingredients %></td>
          <td><%= recref.availability ? 'Available' : 'Not Available' %></td>
          <td><a href="/food_item/<%= recref.food_item_id %>/show">Details</a></td>
          <td><a href="/food_item/<%= recref.food_item_id %>/edit">Edit</a></td>
          <td><a href="/food_item/<%= recref.food_item_id %>/delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a></td>
      </tr>
      <% }); %>
  </table>
  <% } else { %>
  <p>No Records Available</p>
  <% } %>
  <p><a href="/food_item/addrecord">Add New</a></p>
  