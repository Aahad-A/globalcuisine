<% if (allrecs.length > 0) {%>
<table border=1>
    <!-- productname, description, ingredients, package_id, category_id, saleprice, status -->
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Ingredients</th>
        <th>PackageID</th>
        <th>CategoryID</th>
        <th>Sale Price</th>
        <th>Status</th>
        <th>Homepage</th>
    </tr>
  <% allrecs.forEach((recref, index) => { %>
  <tr>
    <td><%= recref.product_id %></td>
    <td><%= recref.productname %></td>
    <td><%= recref.ingredients %></td>
    <td><%= recref.package_id %></td>
    <td><%= recref.category_id %></td>
    <td><%= recref.saleprice %></td>
    <td><%= recref.status %></td>
    <td><%= recref.homepage %></td>
    </td>
  </tr>
  <% }); %>
</table>
<% } else { %>
<p>Not Records Available</p>
<% } %>
